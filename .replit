
modules = ["nodejs-20", "postgresql-16", "python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]

[[workflows.workflow]]
name = "Frontend"
mode = "sequential"
author = 37267323

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run dev"

[deployment]
run = ["sh", "-c", "uvicorn app:app --host 0.0.0.0 --port 8080"]

[[ports]]
localPort = 5173
externalPort = 5173

[[ports]]
localPort = 8080
externalPort = 80
